<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.helper_sort.HelperSortActivity">

    <TextView
        android:id="@+id/btnHelperSortSelectAll"
        android:layout_width="46dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_edit_allcheck_selected"
        android:layout_marginTop="56dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/btnHelperSortBack"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/btn_edit_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHelperSortCard"
        android:layout_width="match_parent"
        android:paddingHorizontal="8dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnHelperSortSelectAll"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btnHelperSortDeleteCard"
        android:layout_width="288dp"
        android:layout_height="56dp"
        android:text="선택 카드 숨기기"
        android:textSize="17sp"
        android:lineSpacingExtra="6sp"
        android:fontFamily="@font/notosans_medium"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/bg_btn_helpersortdeletecard"
        android:visibility="invisible"/>





</androidx.constraintlayout.widget.ConstraintLayout>