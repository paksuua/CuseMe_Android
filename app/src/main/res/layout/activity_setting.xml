<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.setting.SettingActivity">
    <TextView
        android:id="@+id/btnSettingBack"
        android:layout_width="13dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/btn_back"
        />


    <View
        android:layout_height="1.5dp"
        android:layout_width="0dp"
        android:background="@drawable/bg_input_underbar_not"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSettingBack"
        android:layout_marginTop="24dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnSettingCgpw"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintTop_toBottomOf="@id/btnSettingBack"
        card_view:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cgPwParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                card_view:layout_constraintTop_toTopOf="@id/cgPwParent"
                card_view:layout_constraintStart_toStartOf="@id/cgPwParent"
                card_view:layout_constraintBottom_toBottomOf="@id/cgPwParent"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_setting_password"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/greyish_brown"
                android:lineSpacingExtra="6sp"
                card_view:layout_constraintStart_toStartOf="@id/cgPwParent"
                card_view:layout_constraintTop_toTopOf="@id/cgPwParent"
                card_view:layout_constraintBottom_toBottomOf="@id/cgPwParent"
                android:fontFamily="@font/notosans_regular"
                android:layout_marginStart="57dp"
                android:text="@string/btn_setting_change_pw"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <View
        android:layout_height="1.5dp"
        android:layout_width="0dp"
        android:background="@drawable/bg_input_underbar_not"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSettingCgpw"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/btnSettingCgPhoneNum"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintTop_toBottomOf="@id/btnSettingCgpw"
        card_view:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cgPhoneParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                card_view:layout_constraintTop_toTopOf="@id/cgPhoneParent"
                card_view:layout_constraintStart_toStartOf="@id/cgPhoneParent"
                card_view:layout_constraintBottom_toBottomOf="@id/cgPhoneParent"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_setting_call"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/greyish_brown"
                android:lineSpacingExtra="6sp"
                card_view:layout_constraintStart_toStartOf="@id/cgPhoneParent"
                card_view:layout_constraintTop_toTopOf="@id/cgPhoneParent"
                card_view:layout_constraintBottom_toBottomOf="@id/cgPhoneParent"
                android:fontFamily="@font/notosans_regular"
                android:layout_marginStart="57dp"
                android:text="@string/btn_setting_change_phonenum"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <View
        android:layout_height="1.5dp"
        android:layout_width="0dp"
        android:background="@drawable/bg_input_underbar_not"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSettingCgPhoneNum"
        />




</androidx.constraintlayout.widget.ConstraintLayout>