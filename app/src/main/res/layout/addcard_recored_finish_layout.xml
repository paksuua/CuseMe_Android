<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recordFinishLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckedTextView
        android:id="@+id/recordFinish_LeftBtn"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/btn_newcard_play_selected"
        android:enabled="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recordFinish_CenterBtn"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/recordFinish_CenterBtn"
        android:src="@drawable/btn_newcard_recording_selected"
        android:background="@drawable/circle_background"
        android:elevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tistory.comfy91.excuseme_android.CircleCounterView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/white_three"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckedTextView
        android:id="@+id/recordFinish_RightBtn"
        android:layout_width="81dp"
        android:layout_height="34dp"
        android:background="@drawable/btn_solid_pink"
        android:lineSpacingExtra="6sp"
        android:text="확인"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white_three"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/recordFinish_CenterBtn"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>